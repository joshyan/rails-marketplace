<!DOCTYPE html>
<html>
<head>
  <title>RailsMarketplace</title>
  <%= stylesheet_link_tag    "rails_marketplace/marketplace", media: "all" %>
  <%= javascript_include_tag "rails_marketplace/marketplace" %>
  <%= csrf_meta_tags %>
  <% if current_page?(:controller => 'catalog', :action => 'checkout') %>
  <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
  <script type="text/javascript">
    Stripe.setPublishableKey('<%=RailsMarketplace::AdminSetting.stripe_publishable_key%>');
  </script>
  <% end %>
</head>
<body>

<div class="container body">

<%= render "rails_marketplace/partials/menu" %>


  <% flash.each do |key, value| %>
      <div align="center" id="flash" class="alert alert-<%= key %>">
        <a href="#" data-dismiss="alert" class="close">Ã—</a>
        <ul style="text-align: center">
          <l>
          <b> <%= value %>  </b>
          </l>
        </ul>
      </div>
  <% end %>


<%= yield %>

</body>
</html>
